@model HospitalAdminMVC.Models.Paciente

<h1>Detalles del Paciente</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Rut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Rut)
        </dd>
        <dt class="col-sm-2">
            Fecha de Nacimiento
        </dt>
        <dd class="col-sm-10">
            @Model.FechaNacimiento.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
