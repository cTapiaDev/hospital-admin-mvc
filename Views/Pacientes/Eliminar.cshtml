@model HospitalAdminMVC.Models.Paciente

<h1>Confirmar Eliminación</h1>
<h3 class="text-danger">¿Está seguro de que desea eliminar la ficha de este paciente?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">RUT</dt>
        <dd class="col-sm-10">@Model.Rut</dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>