@model HospitalAdminMVC.Models.Paciente

<h1>Editar Ficha del Paciente</h1>
<hr />
<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Rut" class="form-label"></label>
        <input asp-for="Rut" class="form-control" />
        <span asp-validation-for="Rut" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FechaNacimiento" class="form-label"></label>
        <input asp-for="FechaNacimiento" class="form-control" type="date" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
</form>