
@model IEnumerable<Paciente>
<h1>Listado de Pacientes</h1>
<a asp-action="Crear" class="btn btn-primary mb-3">Registrar Nuevo Paciente</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>RUT</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nombre</td>
                <td>@paciente.Rut</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@paciente.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Detalles" asp-route-id="@paciente.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Eliminar" asp-route-id="@paciente.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
